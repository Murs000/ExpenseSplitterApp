<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpenseSplitterApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExpenseSplitterApp"
    xmlns:views="clr-namespace:ExpenseSplitterApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="ExpenseSplitterApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <Shell.FlyoutHeader>
        <StackLayout Padding="20"
                     BackgroundColor ="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}">
            <Label Text="My App" FontSize="20" TextColor="White"/>
        </StackLayout>
    </Shell.FlyoutHeader>
    <Shell.FlyoutFooter BackgroundColor ="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}">
        <!-- Theme Toggle Row -->
        <Grid Padding="10" BackgroundColor ="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label  Grid.Column="0" Text="Dark Theme" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Switch Grid.Column="1" Toggled="OnThemeSwitchToggled" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label  Grid.Column="2" Text="Light Theme" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Grid>
    </Shell.FlyoutFooter>
    
</Shell>
