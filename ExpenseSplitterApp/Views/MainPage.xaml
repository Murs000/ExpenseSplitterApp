<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ExpenseSplitterApp.ViewModels"
             xmlns:m="clr-namespace:ExpenseSplitterApp.Models"
             x:Class="ExpenseSplitterApp.MainPage"
             x:DataType="vm:MainPageViewModel"
             BackgroundColor="#F5F5F5">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Expenses List -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20">
                <Label Text="Expenses"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#333"
                       HorizontalOptions="Center"/>

                <CollectionView ItemsSource="{Binding Expences}"
                                EmptyView="No expenses added yet">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical"
                           ItemSpacing="2" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:ExpenceModel">
                            <Frame CornerRadius="12"
                                   Padding="15"
                                   Margin="5,5"
                                   BackgroundColor="White"
                                   HasShadow="True">
                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0"
                                           Text="{Binding Description}"
                                           FontSize="16"
                                           TextColor="#333"
                                           VerticalTextAlignment="Center" />

                                    <Label Grid.Column="1"
                                           Text="{Binding ExpenceAmount, StringFormat='₼{0:F2}'}"
                                           FontSize="16"
                                           TextColor="#2E8B57"
                                           VerticalTextAlignment="Center"
                                           HorizontalOptions="End"
                                           Margin="10,0" />

                                    <Label Grid.Column="2"
                                           Text="{Binding PersonId}"
                                           FontSize="14"
                                           TextColor="#777"
                                           VerticalTextAlignment="Center"
                                           HorizontalOptions="End" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Floating Action Button -->
        <Grid Grid.Row="1">
            <Button Text="+"
                    Clicked="OnGoToSecondPageClicked"
                    FontSize="28"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="#2E8B57"
                    TextColor="White"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="0,0,10,10"/>
        </Grid>
    </Grid>
</ContentPage>
